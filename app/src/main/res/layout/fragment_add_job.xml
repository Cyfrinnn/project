<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Job Title -->
        <EditText
            android:id="@+id/et_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Title"
            android:inputType="text"
            android:padding="10dp" />

        <!-- Company Name -->
        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:inputType="text"
            android:padding="10dp" />

        <!-- Job Description -->
        <EditText
            android:id="@+id/et_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Description"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="top"
            android:padding="10dp" />

        <!-- Salary Range -->
        <EditText
            android:id="@+id/et_salary_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary Range"
            android:inputType="number"
            android:padding="10dp" />

        <!-- Job Type Dropdown -->
        <Spinner
            android:id="@+id/spinner_job_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/job_type_array"
            android:padding="10dp" />

        <!-- Job Location -->
        <EditText
            android:id="@+id/et_job_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Location"
            android:inputType="text"
            android:padding="10dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Job"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
