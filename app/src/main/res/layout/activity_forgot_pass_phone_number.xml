<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical">

    <!-- Header with Icon Button and TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/forgot_password"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP Verification"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="We will send you an One Time Password on this mobile number"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:alpha="0.5" />

    <!-- Input Field Section -->
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:autofillHints="phoneNumber"
        android:backgroundTint="@color/black"
        android:hint="Enter your phone number"
        android:inputType="number"
        android:maxWidth="300dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/colorTextLight" />

    <!-- Button Section -->
    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/for_btn"
        android:textColor="@color/white"
        android:text="Continue"
        android:layout_marginTop="20dp"/>
</LinearLayout>